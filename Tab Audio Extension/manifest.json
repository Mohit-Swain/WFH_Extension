{
  "manifest_version" : 3,
  "name": "Tab Audio Controller",
  "version": "0.0.1",
  "description": "A Extension to controll the volume of each tab",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Tab Audio Controller",   
    "default_popup": "popups/popup.html",
    "default_icon" :  {
      "16" : "icons/icons-24.png",
      "48" : "icons/icons-50.png",
      "128": "icons/icons-100.png"
    }
  },
  "icons":{
    "16" : "icons/icons-24.png",
    "48" : "icons/icons-50.png",
    "128": "icons/icons-100.png"
  },
  "permissions":[
    "tabs",
    "tabCapture"
  ]
}